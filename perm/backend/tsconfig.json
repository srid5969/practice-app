{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
   "module": "node16",                       
    "moduleResolution": "node16",      
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
